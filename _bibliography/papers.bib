@article{10.1140/epjb/e2019-100149-9,
year = {2019},
month = {Aug.},
title = {{Cation ordering, ferrimagnetism and ferroelectric relaxor behavior in Pb(Fe1−xScx)2∕3W1∕3O3 solid solutions}},
author = {Ivanov, Sergey A. and Beran, Premysl and Bush, Alexandr A. and Sarkar, Tapati and Shafeie, Samrand and Wang, Duo and Sanyal, Biplab and Eriksson, Olle and Sahlberg, Martin and Kvashnin, Yaroslav and Tellgren, Roland and Nordblad, Per and Mathieu*, Roland},
