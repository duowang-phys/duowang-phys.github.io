year = {2018},
month = {Sep.},
title = {{Nickel–Copper Alloy Encapsulated in Graphitic Carbon Shells as Electrocatalysts for Hydrogen Evolution Reaction}},
author = {Shen*, Yi and Zhou, Yongfang and Wang, Duo and Wu, Xi and Li*, Jia and Xi, Jingyu},
